groups:
  - name: mysql probe
    rules:
    - alert: MySQL 宕机
      expr: |
        avg_over_time(mysql_up{}[5m]) < .9
        AND
        max_over_time(mysql_up{}[1m]) == 0
      for: 0m
      labels:
        severity: critical
        channels: "@linux/feishu;"
        level: P0
      annotations:
        summary: MySQL down

    - alert: MySQL 连接过多(>80%)
      expr: max_over_time(mysql_global_status_threads_connected[1m]) / mysql_global_variables_max_connections * 100 > 80
      for: 2m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: MySQL too many connections (> 80%)

    - alert: MySQL 高线程运行
      expr: max_over_time(mysql_global_status_threads_running[1m]) / mysql_global_variables_max_connections * 100 > 60
      for: 2m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: MySQL high threads running

    - alert: MySQL 慢查询
      expr: increase(mysql_global_status_slow_queries[1m]) > 0
      for: 2m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: MySQL slow queries

    - alert: MySQL InnoDB 日志等待
      expr: rate(mysql_global_status_innodb_log_waits[15m]) > 10
      for: 0m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: MySQL InnoDB log waits

    - alert: MySQL 重新启动
      expr: mysql_global_status_uptime < 60
      for: 0m
      labels:
        severity: info
        channels: "@linux/feishu;"
        level: P0
      annotations:
        summary: MySQL restarted
