groups:
  - name: process
    rules:
    - alert: 进程数过高
      expr: namedprocess_namegroup_num_procs > 300
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "{{ $labels.groupname }} 已产生 {{ $value }} 个进程，大于300"

    - alert: 线程数过高
      expr: namedprocess_namegroup_num_threads > 300
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "进程 {{ $labels.groupname }} 已产生 {{ $value }} 个线程，大于300"

    - alert: 僵尸进程告警
      expr: namedprocess_namegroup_states{state="Zombie"} > 0
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "{{ $labels.groupname }} 已产生 {{ $value }} 个僵尸进程"

    - alert: 进程重启
      expr: ceil(time() - max by(all,groupname,job,instance,env,idc,state) (namedprocess_namegroup_oldest_start_time_seconds)) < 60
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "进程 {{ $labels.groupname }} 在 {{ $value }} 秒前发生重启"

    - alert: 进程失联
      expr: up{job="process"} == 0
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "进程 process-exporter 已退出，请检查"

    - alert: 进程退出
      expr: max by(all,groupname,job,instance,env,idc,state) (delta(namedprocess_namegroup_oldest_start_time_seconds[5m])) < 0
      for: 1m
      labels:
        severity: warning
        channels: "@linux/feishu;"
        level: P1
      annotations:
        summary: "进程 {{ $labels.groupname }} 已退出"

